<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.association :ingredient %>
  <%= f.input :description, label: 'How much?' %>
  <%= f.button :submit, value: 'Add ingredient', class: "btn-outline-black btn-smaller" %>
  <%= link_to 'Back to list', cocktails_path, class: "btn-outline-black" %>
<% end %>
