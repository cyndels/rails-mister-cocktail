<div class="row">
  <div class="col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3">
    <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "Add cocktail", class: "btn-outline-black btn-smaller" %>
      <%= link_to 'Back to list', root_path, class: "btn-outline-black" %>
    <% end %>
  </div>
</div>
