<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.7) 50%), url('<%= cl_image_path @cocktail.photo %>');">
  <div class="banner-content">
    <h1><em><%= @cocktail.name %></em></h1>
  </div>
</div>

<div class="container">

  <div class="cocktail-infos">
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <div class="ingredients-list">
          <div class="ingredients-title"><h2>Ingredients</h2></div>
          <div class="ingredients-name">
            <ul>
              <% @cocktail.doses.each do |dose| %>
              <li><%= dose.ingredient.name %> (<%= dose.description %>) <%= link_to "", cocktail_dose_path(@cocktail, dose), class: "fas fa-trash-alt delete-btn", method: :delete, data: { confirm: "Are you sure?" } %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-md-6">
        <div class="add-ingredients">
          <%= render :file => '/doses/new' %>
        </div>
      </div>
    </div>
  </div>

</div>
